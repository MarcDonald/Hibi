<resources>

  <!--region Base Themes-->
  <style name="Hibi.LightTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/lightThemeColorPrimary</item>
    <item name="colorPrimaryDark">@color/lightThemeColorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorError">@color/error</item>
    <item name="hibiTextOnPrimary">@color/lightThemePrimaryText</item>
    <item name="hibiSecondaryTextOnPrimary">@color/lightThemeSecondaryText</item>
    <item name="hibiHintTextOnPrimary">@color/lightThemeHintText</item>
    <item name="hibiPrimaryIconTint">@color/lightThemePrimaryText</item>
    <item name="android:statusBarColor">?colorPrimary</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="materialButtonStyle">@style/Hibi.Button.Text</item>
  </style>

  <style name="Hibi.DarkTheme" parent="Theme.MaterialComponents.NoActionBar">
    <item name="colorPrimary">@color/darkThemeColorPrimary</item>
    <item name="colorPrimaryDark">@color/darkThemeColorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorError">@color/error</item>
    <item name="hibiTextOnPrimary">@color/darkThemePrimaryText</item>
    <item name="hibiSecondaryTextOnPrimary">@color/darkThemeSecondaryText</item>
    <item name="hibiHintTextOnPrimary">@color/darkThemeHintText</item>
    <item name="hibiPrimaryIconTint">@color/white60</item>
    <item name="android:navigationBarColor">?colorPrimaryDark</item>
    <item name="android:statusBarColor">?colorPrimaryDark</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="materialButtonStyle">@style/Hibi.Button.Text</item>
    <item name="chipStyle">@style/Hibi.DarkTheme.Chip</item>
  </style>
  <!--endregion-->

  <!--region UI Components-->
  <style name="Hibi.BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowIsFloating">false</item>
    <item name="buttonStyle">@style/Hibi.Button.Text</item>
    <item name="materialButtonStyle">@style/Hibi.Button.Text</item>
    <item name="bottomSheetStyle">@style/Hibi.BottomSheetStyle</item>
  </style>

  <style name="Hibi.LightTheme.BottomSheetDialogTheme" parent="Hibi.BottomSheetDialogTheme">
    <item name="colorPrimary">@color/lightThemeColorPrimary</item>
    <item name="android:windowLightStatusBar">true</item>
  </style>

  <style name="Hibi.DarkTheme.BottomSheetDialogTheme" parent="Hibi.BottomSheetDialogTheme">
    <item name="colorPrimary">@color/darkThemeColorPrimary</item>
    <item name="android:windowLightStatusBar">false</item>
    <item name="android:navigationBarColor">?colorPrimary</item>
  </style>

  <style name="Hibi.BottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
    <item name="android:background">@drawable/rounded_bottom_sheet_background</item>
  </style>

  <style name="Hibi.DarkTheme.Chip" parent="Base.Widget.MaterialComponents.Chip">
    <item name="chipBackgroundColor">@color/white50</item>
    <item name="closeIconVisible">false</item>
  </style>

  <style name="Hibi.CardView.Rounded" parent="Widget.MaterialComponents.CardView">
    <item name="cardCornerRadius">8dp</item>
  </style>

  <style name="Hibi.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Hibi.Button.Negative" parent="Hibi.Button.Text">
    <item name="android:backgroundTint">@color/error</item>
    <item name="android:textColor">@color/textOnError</item>
    <item name="rippleColor">@color/textOnError</item>
  </style>

  <style name="Hibi.Button.ExtendedFab" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:layout_marginBottom">24dp</item>
    <item name="android:elevation">12dp</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:paddingEnd">20dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textColor">@android:color/white</item>
    <item name="android:textSize">14sp</item>
    <item name="backgroundTint">?attr/colorAccent</item>
    <item name="cornerRadius">32dp</item>
    <item name="iconSize">24dp</item>
    <item name="iconTint">@android:color/white</item>
    <item name="iconPadding">12dp</item>
  </style>
  <!--endregion-->

  <!--region Edit Texts-->
  <style name="Hibi.EditText.AddNewWordDialog" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
    <item name="android:inputType">textCapSentences|textMultiLine</item>
    <item name="android:maxLines">3</item>
  </style>
  <!--endregion-->

  <!--region Text Appearances-->
  <style name="TextAppearance.Hibi.DateTimeAddEntry" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.ToolbarTextButton" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.ViewEntryContent" parent="TextAppearance.MaterialComponents.Body1">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">?attr/hibiSecondaryTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.Tab" parent="TextAppearance.MaterialComponents.Body1">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.MainScreenRecyclerHeader" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.MainEntryDate" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.BottomSheetTitle" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="android:textSize">20sp</item>
    <item name="android:textAlignment">textStart</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.DialogTitle" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="android:textSize">20sp</item>
    <item name="android:textAlignment">center</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.BinaryDialogMessage" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">?attr/hibiSecondaryTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.ResultItemPrimary" parent="TextAppearance.MaterialComponents.Body1">
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.ResultItemSecondary" parent="TextAppearance.MaterialComponents.Caption">
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">?attr/hibiSecondaryTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.ResultItemTertiary" parent="TextAppearance.MaterialComponents.Caption">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">?attr/hibiSecondaryTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.MainMenuOption" parent="TextAppearance.MaterialComponents.Caption">
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.LicenseTitle" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?attr/hibiTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.LicenseDescription" parent="TextAppearance.MaterialComponents.Body1">
    <item name="android:textColor">?attr/hibiSecondaryTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.LicenseLicense" parent="TextAppearance.MaterialComponents.Body2">
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">?attr/hibiSecondaryTextOnPrimary</item>
  </style>

  <style name="TextAppearance.Hibi.WarningDisplay" parent="TextAppearance.MaterialComponents.Body1">
    <item name="android:textColor">?hibiSecondaryTextOnPrimary</item>
  </style>
  <!--endregion-->

</resources>
