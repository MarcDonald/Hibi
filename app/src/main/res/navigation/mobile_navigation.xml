<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/mobile_navigation"
  app:startDestination="@id/destination_main">

  <fragment
    android:id="@+id/destination_main"
    android:name="app.marcdev.nichiroku.mainscreen.MainScreenFragment"
    android:label="MainFragment">
    <action
      android:id="@+id/add_entry_action"
      app:destination="@id/destination_add_entry"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim" />
  </fragment>
  <fragment
    android:id="@+id/destination_add_entry"
    android:name="app.marcdev.nichiroku.addentryscreen.AddEntryFragment"
    android:label="AddEntryFragment">
  </fragment>
</navigation>