<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="top"
    android:backgroundTint="?colorPrimaryDark">

    <include layout="@layout/toolbar_back_scrolling" />
  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        android:id="@+id/license_timber"
        style="@style/Widget.Hibi.CardView.Rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        app:ldDescription="@string/timber_description"
        app:ldLicense="@string/apache"
        app:ldTitle="@string/timber" />

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        android:id="@+id/license_kodein"
        android:layout_width="match_parent"
        style="@style/Widget.Hibi.CardView.Rounded"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:ldDescription="@string/kodein_description"
        app:ldLicense="@string/mit"
        app:ldTitle="@string/kodein" />

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        style="@style/Widget.Hibi.CardView.Rounded"
        android:id="@+id/license_retrofit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:ldDescription="@string/retrofit_description"
        app:ldLicense="@string/apache"
        app:ldTitle="@string/retrofit" />

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        style="@style/Widget.Hibi.CardView.Rounded"
        android:id="@+id/license_gson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:ldDescription="@string/gson_description"
        app:ldLicense="@string/apache"
        app:ldTitle="@string/gson" />

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        android:id="@+id/license_android_file_picker"
        style="@style/Widget.Hibi.CardView.Rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:ldDescription="@string/android_file_picker_description"
        app:ldLicense="@string/apache"
        app:ldTitle="@string/android_file_picker" />

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        android:id="@+id/license_mplus"
        style="@style/Widget.Hibi.CardView.Rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:ldDescription="@string/mplus_description"
        app:ldLicense="@string/ofl"
        app:ldTitle="@string/mplus" />

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        android:id="@+id/license_open_sans"
        style="@style/Widget.Hibi.CardView.Rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:ldDescription="@string/open_sans_description"
        app:ldLicense="@string/apache"
        app:ldTitle="@string/open_sans" />

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        android:id="@+id/license_google_material_icons"
        style="@style/Widget.Hibi.CardView.Rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:ldDescription="@string/material_icons_description"
        app:ldLicense="@string/apache"
        app:ldTitle="@string/google_material_icons_title" />

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        android:id="@+id/license_material_icons"
        style="@style/Widget.Hibi.CardView.Rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:ldDescription="@string/material_icons_description"
        app:ldLicense="@string/sil"
        app:ldTitle="@string/material_icons_title" />

      <com.marcdonald.hibi.uicomponents.views.LicenseDisplay
        android:id="@+id/license_glide"
        style="@style/Widget.Hibi.CardView.Rounded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:ldDescription="@string/glide_description"
        app:ldLicense="@string/glide_license"
        app:ldTitle="@string/glide" />
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>