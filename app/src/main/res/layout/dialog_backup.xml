<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <TextView
    android:id="@+id/txt_backup_title"
    android:text="@string/backing_up"
    android:textAppearance="@style/TextAppearance.Hibi.DialogTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:padding="@dimen/margin_standard" />

  <ProgressBar
    android:id="@+id/prog_backup"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_standard"
    app:layout_constraintTop_toBottomOf="@id/txt_backup_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/con_backup_success"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@id/txt_backup_title"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageView
      android:id="@+id/img_backup_success"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:padding="@dimen/margin_standard"
      android:src="@drawable/ic_check_24dp"
      android:contentDescription="@string/backup_success"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:id="@+id/txt_backup_explanation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/backup_file_explanation"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.Hibi.DialogContent"
      app:layout_constraintTop_toBottomOf="@id/img_backup_success"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:padding="@dimen/margin_standard"/>
  </androidx.constraintlayout.widget.ConstraintLayout>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_backup_share"
    style="@style/Widget.Hibi.Button.Borderless"
    android:text="@string/save"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/con_backup_success"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="@dimen/margin_standard"
    android:layout_marginEnd="@dimen/margin_standard"
    android:layout_marginBottom="@dimen/margin_standard" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btn_backup_dismiss"
    style="@style/Widget.Hibi.Button.Text"
    android:text="@string/dismiss"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/con_backup_success"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="@dimen/margin_standard"
    android:layout_marginEnd="@dimen/margin_standard" />

</androidx.constraintlayout.widget.ConstraintLayout>