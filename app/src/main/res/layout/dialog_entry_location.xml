<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_margin="@dimen/margin_standard"
  tools:ignore="UnusedAttribute">

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="false"
    android:scrollbarSize="@dimen/scroll_bar_size"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/txt_add_location_title"
        style="@style/TextAppearance.Hibi.DialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:gravity="start"
        android:text="@string/add_location_to_entry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <EditText
        android:id="@+id/edt_add_location_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:inputType="textCapSentences"
        android:hint="@string/location"
        android:autofillHints="@string/location"
        app:layout_constraintTop_toBottomOf="@id/txt_add_location_title"
        app:layout_constraintStart_toStartOf="parent" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete_location"
        android:layout_width="0dp"
        style="@style/Widget.Hibi.Button.Negative"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gd_add_tag_50_vert"
        app:layout_constraintTop_toBottomOf="@id/edt_add_location_input"
        android:text="@string/delete" />

      <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_location"
        style="@style/Widget.Hibi.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gd_add_tag_50_vert"
        app:layout_constraintTop_toBottomOf="@id/edt_add_location_input"
        android:text="@string/save" />

      <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gd_add_tag_50_vert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>
</RelativeLayout>