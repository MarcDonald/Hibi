<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/margin_standard">

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadeScrollbars="false"
    android:scrollbarSize="@dimen/scroll_bar_size"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <TextView
        android:id="@+id/txt_add_new_word_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:gravity="start"
        android:text="@string/add_new_word"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <EditText
        android:id="@+id/edt_new_word_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:inputType="textCapSentences"
        android:hint="@string/word"
        app:layout_constraintTop_toBottomOf="@id/txt_add_new_word_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

      <EditText
        android:id="@+id/edt_new_word_reading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:inputType="textCapSentences"
        android:hint="@string/reading"
        app:layout_constraintTop_toBottomOf="@id/edt_new_word_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

      <EditText
        android:id="@+id/edt_new_word_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:inputType="textCapSentences"
        android:hint="@string/part_of_speech"
        app:layout_constraintTop_toBottomOf="@id/edt_new_word_reading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

      <EditText
        android:id="@+id/edt_new_word_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:inputType="textCapSentences"
        android:hint="@string/english"
        app:layout_constraintTop_toBottomOf="@id/edt_new_word_type"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

      <EditText
        android:id="@+id/edt_new_word_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:inputType="textCapSentences"
        android:hint="@string/notes"
        app:layout_constraintTop_toBottomOf="@id/edt_new_word_english"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

      <app.marcdev.hibi.uicomponents.TransparentSquareButton
        android:id="@+id/btn_save_new_word"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:text="@string/save"
        android:layout_margin="@dimen/margin_standard"
        app:layout_constraintTop_toBottomOf="@id/edt_new_word_notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.core.widget.NestedScrollView>
</RelativeLayout>