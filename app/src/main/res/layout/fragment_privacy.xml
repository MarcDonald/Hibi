<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/app_bar_layout_view_entry"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:backgroundTint="?colorPrimaryDark">

    <include layout="@layout/toolbar_back_scrolling" />
  </com.google.android.material.appbar.AppBarLayout>

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <!--region Analytics-->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        style="@style/Widget.Hibi.CardView.Rounded">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:clickable="true"
          android:focusable="true"
          android:background="?selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Hibi.QATitle"
            android:text="@string/what_analytics"
            android:layout_margin="@dimen/margin_standard" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Hibi.QAContent"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard"
            android:text="@string/analytics_answer" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <!--endregion-->

      <!--region Data Sent-->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        style="@style/Widget.Hibi.CardView.Rounded">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:clickable="true"
          android:focusable="true"
          android:background="?selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Hibi.QATitle"
            android:layout_margin="@dimen/margin_standard"
            android:text="@string/data_sent" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Hibi.QAContent"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard"
            android:text="@string/data_sent_answer" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <!--endregion-->

      <!--region Libraries-->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        style="@style/Widget.Hibi.CardView.Rounded">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:clickable="true"
          android:focusable="true"
          android:background="?selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Hibi.QATitle"
            android:text="@string/libraries"
            android:layout_margin="@dimen/margin_standard" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Hibi.QAContent"
            android:text="@string/libraries_answer"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <!--endregion-->

      <!--region Libraries-->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        style="@style/Widget.Hibi.CardView.Rounded">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:clickable="true"
          android:focusable="true"
          android:background="?selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Hibi.QATitle"
            android:text="@string/permissions"
            android:layout_margin="@dimen/margin_standard" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Hibi.QAContent"
            android:text="@string/permissions_answer"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <!--endregion-->

      <!--region More Information-->
      <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        style="@style/Widget.Hibi.CardView.Rounded">

        <LinearLayout
          android:id="@+id/lin_privacy_more_info"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:clickable="true"
          android:focusable="true"
          android:background="?selectableItemBackground">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Hibi.QATitle"
            android:text="@string/more_information"
            android:layout_margin="@dimen/margin_standard" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Hibi.QAContent"
            android:text="@string/more_information_answer"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginBottom="@dimen/margin_standard" />
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <!--endregion-->
    </LinearLayout>
  </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>