<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/const_option_bar"
  android:layout_width="match_parent"
  android:layout_height="@dimen/option_bar_height"
  android:background="@color/colorPrimary">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/img_option_tag"
      android:layout_width="@dimen/option_bar_icon_width"
      android:layout_height="@dimen/option_bar_height"
      android:background="?selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:padding="@dimen/option_bar_icon_padding"
      android:src="@drawable/ic_tag_black_24dp"
      android:contentDescription="@string/add_tags_hint"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <ImageView
      android:id="@+id/img_placeholder_1"
      android:layout_width="@dimen/option_bar_icon_width"
      android:layout_height="@dimen/option_bar_height"
      android:background="?selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:padding="@dimen/option_bar_icon_padding"
      android:src="@drawable/ic_add_black_24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/img_option_tag"
      app:layout_constraintTop_toTopOf="parent" />

    <ImageView
      android:id="@+id/img_placeholder_2"
      android:layout_width="@dimen/option_bar_icon_width"
      android:layout_height="@dimen/option_bar_height"
      android:background="?selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:padding="@dimen/option_bar_icon_padding"
      android:src="@drawable/ic_add_black_24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/img_placeholder_1"
      app:layout_constraintTop_toTopOf="parent" />

    <ImageView
      android:id="@+id/img_placeholder_3"
      android:layout_width="@dimen/option_bar_icon_width"
      android:layout_height="@dimen/option_bar_height"
      android:background="?selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:padding="@dimen/option_bar_icon_padding"
      android:src="@drawable/ic_add_black_24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/img_placeholder_2"
      app:layout_constraintTop_toTopOf="parent" />

    <ImageView
      android:id="@+id/img_placeholder_4"
      android:layout_width="@dimen/option_bar_icon_width"
      android:layout_height="@dimen/option_bar_height"
      android:background="?selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:padding="@dimen/option_bar_icon_padding"
      android:src="@drawable/ic_add_black_24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/img_placeholder_3"
      app:layout_constraintTop_toTopOf="parent" />

    <ImageView
      android:id="@+id/img_placeholder_5"
      android:layout_width="@dimen/option_bar_icon_width"
      android:layout_height="@dimen/option_bar_height"
      android:background="?selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:padding="@dimen/option_bar_icon_padding"
      android:src="@drawable/ic_add_black_24dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@id/img_placeholder_4"
      app:layout_constraintTop_toTopOf="parent" />
  </androidx.constraintlayout.widget.ConstraintLayout>
</HorizontalScrollView>
