<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <com.google.android.material.appbar.AppBarLayout
    android:id="@+id/app_bar_layout_view_entry"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:backgroundTint="?colorPrimaryDark">

    <include layout="@layout/toolbar_back" />
  </com.google.android.material.appbar.AppBarLayout>

  <!--region Search Results Loading-->
  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/const_search_entries_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
      android:id="@+id/prog_search_entries"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_standard"
      app:layout_constraintBottom_toTopOf="@id/gd_search_entries_loading"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

    <TextView
      android:id="@+id/txt_search_entries_loading"
      style="@style/TextAppearance.Hibi.WarningDisplay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_standard"
      android:text="@string/loading_entries"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/gd_search_entries_loading" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/gd_search_entries_loading"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5" />
  </androidx.constraintlayout.widget.ConstraintLayout>
  <!--endregion-->

  <!--region No Search Results-->
  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/const_no_search_entries_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/img_no_entries"
      android:layout_width="@dimen/main_screen_warning_image_size"
      android:layout_height="@dimen/main_screen_warning_image_size"
      android:contentDescription="@string/no_search_entry_results"
      android:src="@drawable/ic_sentiment_dissatisfied_24dp"
      app:layout_constraintBottom_toTopOf="@id/gd_no_search_entries_results"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

    <TextView
      android:id="@+id/txt_no_search_entries_results"
      style="@style/TextAppearance.Hibi.WarningDisplay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/margin_standard"
      android:text="@string/no_search_entry_results"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/gd_no_search_entries_results" />

    <androidx.constraintlayout.widget.Guideline
      android:id="@+id/gd_no_search_entries_results"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.5" />
  </androidx.constraintlayout.widget.ConstraintLayout>
  <!--endregion-->

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_search_entries"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/search_entries_recycler_bottom_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

  <include layout="@layout/sheet_entry_search" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>