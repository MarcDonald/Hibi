<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TextView
    android:id="@+id/txt_yes_no_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_standard"
    android:text="@string/title"
    android:textAlignment="center"
    android:textAppearance="@style/LightTheme.TextAppearance.YesNoDialogTitle"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/txt_yes_no_message"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_standard"
    android:text="@string/message"
    android:textAppearance="@style/LightTheme.TextAppearance.YesNoDialogMessage"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/txt_yes_no_title" />

  <FrameLayout
    android:id="@+id/frame_yes_no_positive"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_standard"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/txt_yes_no_message">

    <TextView
      android:id="@+id/txt_yes_no_positive"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/margin_standard"
      android:text="@string/positive"
      android:textAlignment="center"
      android:textAppearance="@style/LightTheme.TextAppearance.YesNoDialogButton" />
  </FrameLayout>

  <FrameLayout
    android:id="@+id/frame_yes_no_negative"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_standard"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@id/frame_yes_no_positive"
    app:layout_constraintTop_toBottomOf="@id/txt_yes_no_message">

    <TextView
      android:id="@+id/txt_yes_no_negative"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/margin_standard"
      android:text="@string/negative"
      android:textAlignment="center"
      android:textAppearance="@style/LightTheme.TextAppearance.YesNoDialogButton" />
  </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>